# Example Terraform variables file
# Copy this file to terraform.tfvars and customize the values

# AWS region where resources will be created
aws_region = "us-east-1"

# Environment name for resource tagging
environment = "production"

# Project name used for resource naming (must be unique in your account)
project_name = "aws-security-baseline"

# Log retention settings (minimum 30 days)
cloudtrail_log_retention_days = 90
config_log_retention_days = 90

# GuardDuty finding publishing frequency
# Options: FIFTEEN_MINUTES, ONE_HOUR, SIX_HOURS
guardduty_finding_publishing_frequency = "FIFTEEN_MINUTES"
